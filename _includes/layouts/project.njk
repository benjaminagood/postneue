<!doctype html>
<html>
  <head>
    <title>{{ title }}</title>
    {% include "meta.njk" %}
    {% include "scripts.njk" %}
    <link rel="stylesheet" href="/assets/css/style.css">
    <link rel="stylesheet" href="/assets/css/project.css">
</head>
  <body class="project">
    <div id="featured">{{ featuredImage | markdown | safe }}</div>
    
    <header>
      <p>title</p>
      <p>date</p>
      <p>description</p>
      <p class="title">{{ title }}</p>
      <p class="date">{{ date.getFullYear().toString() | safe }}</p>
      <p class="description">{% if description | length %}{{ description | safe }}{% endif %}</p>
    </header>

    <main>
      <section class="gallery">
        {% if gallery | length %}<section class="gallery">{{ gallery | markdown | safe }}</section>{% endif %}
      </section>
    </main>

    {% include "footer.njk" %}
  </body>
</html>
